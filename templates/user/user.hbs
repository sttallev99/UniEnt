{{> header }}
<div class="col-md-6 text-center col-lg">
    <img class="profile-img" src="./images/user.png" />
    <div class="profile-info">
      <p>Username: <small>{{username}}</small></p>
      {{#if haveOwnEvent}}
      <p class="infoType">Organizer of {{countEvents}} events.</p>
      {{#each ownEvents}}
      {{> ownEvent}}
      {{/each}}
      {{else}}
      <p>No events</p>
      {{/if}}
    </div>
</div>
{{> footer }}